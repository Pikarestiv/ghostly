{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["./*"],
      "@/*": ["*"],
      "@comps/*": ["components/*"],
      "@atoms/*": ["components/atoms/*"],
      "@mols/*": ["components/molecules/*"],
      "@orgs/*": ["components/organisms/*"],
      "@pgs/*": ["components/pages/*"],
      "@temps/*": ["components/templates/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
